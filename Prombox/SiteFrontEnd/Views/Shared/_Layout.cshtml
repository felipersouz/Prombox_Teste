<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap-datepicker-1.9.0-dist/js/bootstrap-datepicker.min.js"></script>
    <script src="~/lib/bootstrap-datepicker-1.9.0-dist/js/bootstrap-datepicker.pt-BR.min.js"></script>
    <script src="~/lib/jQuery-Mask-Plugin-master/src/jquery.mask.js"></script>

    @{
        //Variáveis globais de front
        string tituloPromocao = "Prombox CRM & Promoção";

        ViewData["nomeCliente"] = "Prombox";
        ViewData["tituloCliente"] = "Prombox CRM & Promoção";


        if (!string.IsNullOrEmpty(ViewData["Title"].ToString()))
        {
            <title>@ViewData["Title"] - @tituloPromocao</title>
        }
        else
        {
            <title>@tituloPromocao</title>
        }

    }


    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
    @*<link rel="stylesheet" href="~/css/site.css" />*@

    <!--Google fonts-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

    <!-- Main CSS -->
    <link href="~/css/Assan/theme.min.css" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/lib/bootstrap-datepicker-1.9.0-dist/css/bootstrap-datepicker.css" rel="stylesheet">


    <!-- icones -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.0/font/bootstrap-icons.css">
    <link rel="apple-touch-icon" sizes="57x57" href="~/images/Cliente/Icones/apple-icon-57x57.png">
    <link rel="apple-touch-icon" sizes="60x60" href="~/images/Cliente/Icones/apple-icon-60x60.png">
    <link rel="apple-touch-icon" sizes="72x72" href="~/images/Cliente/Icones/apple-icon-72x72.png">
    <link rel="apple-touch-icon" sizes="76x76" href="~/images/Cliente/Icones/apple-icon-76x76.png">
    <link rel="apple-touch-icon" sizes="114x114" href="~/images/Cliente/Icones/apple-icon-114x114.png">
    <link rel="apple-touch-icon" sizes="120x120" href="~/images/Cliente/Icones/apple-icon-120x120.png">
    <link rel="apple-touch-icon" sizes="144x144" href="~/images/Cliente/Icones/apple-icon-144x144.png">
    <link rel="apple-touch-icon" sizes="152x152" href="~/images/Cliente/Icones/apple-icon-152x152.png">
    <link rel="apple-touch-icon" sizes="180x180" href="~/images/Cliente/Icones/apple-icon-180x180.png">
    <link rel="icon" type="image/png" sizes="192x192" href="~/images/Cliente/Icones/android-icon-192x192.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/images/Cliente/Icones/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="96x96" href="~/images/Cliente/Icones/favicon-96x96.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/images/Cliente/Icones/favicon-16x16.png">
    <link rel="manifest" href="~/images/Cliente/Icones/manifest.json">
    <meta name="msapplication-TileColor" content="#ffffff">
    <meta name="msapplication-TileImage" content="~/images/Cliente/Icones/ms-icon-144x144.png">
    <meta name="theme-color" content="#ffffff">

</head>
<body>
    <!--Header Start-->
    <header class="z-index-fixed header-transparent header-absolute-top" style="display:contents">
        <nav class="navbar navbar-expand-lg navbar-link-white header-color">
            <div class="container">
                <a class="navbar-brand">
                    <img src="~/Assets/Cliente/Logos/Prombox_cabeçalho.png" alt="@ViewData["nomeCliente"]" title="@ViewData["tituloCliente"]" class="" width="150">
                </a>
                <div class="d-flex align-items-center navbar-no-collapse-items order-lg-last">
                    <button class="navbar-toggler order-last" type="button" data-bs-toggle="collapse"
                            data-bs-target="#mainNavbarTheme" aria-controls="mainNavbarTheme" aria-expanded="false"
                            aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon">
                            <i></i>
                        </span>
                    </button>


                    @{
                        var sessionValue = new Byte[20];

                        bool isAutenticado = Context.Session.TryGetValue("IsAutenticado", out sessionValue);


                        // Autenticação
                        if (isAutenticado)
                        {
                            <partial name="_MenuAutenticado" />
                        }
                        else
                        {
                            <partial name="_Menu" />
                        }

                    }
                </div>
            </div>
        </nav>
    </header>

    <main class="main-content" id="main-content">
        @RenderBody()
    </main>
    <partial name="_Rodape" />

    @RenderSection("Scripts", required: false)
</body>
<script src="~/js/theme.bundle.js"></script>
</html>
