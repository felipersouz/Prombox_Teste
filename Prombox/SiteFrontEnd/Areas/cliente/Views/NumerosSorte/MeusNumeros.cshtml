@model List<Prombox.Domain.Entities.NumeroDaSorte>;
@{ ViewData["Title"] = "Meus Números da Sorte"; }

<section class="container">
    <div>
        <div class="text-center pt-5">
            <h1>CONSULTE SEUS NÚMEROS DA SORTE</h1>
        </div>
        <div class="text-center mt-2">
            <h3>
                <p>Confira os seus números da sorte e não se esqueça de continuar participando.</p>
                <p>Guarde o cupom fiscal de sua compra. Ele será solicitado caso você seja sorteado.</p>
                <p style="color: red">Não esqueça de guardar suas NF's. É muito importante.</p>
            </h3>
        </div>
        <div class="mt-7">
            <table class="table table-striped">
                <thead>
                    <tr class="background-gray">
                        <td colspan="6" style=" font-weight: bold; font-size: 18px; height: 100%; text-align:center;">VALOR TOTAL DO SALDO @string.Format("{0:C}", ViewBag.TotalSaldo)</td>
                    </tr>
                    <tr class="background-gray">
                        <td>SÉRIE</td>
                        <td>NÚMERO</td>
                        <td>DATA DE CADASTRO</td>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {

                        <tr>
                            <td>1</td>
                            <td>@item.Numero</td>
                            <td>@item.DataHoraAssociacao.Value.ToString("dd/MM/yyyy")</td>                            
                        </tr>
                    }                   
                </tbody>
            </table>
        </div>
    </div>
</section>
